<table>
  <tr>
    <th>Name</th>
    <th>URL</th>
    <th>Description</th>
  </tr>

  <% if @results.length > 0 %>
    <% @results.each do |row| %>
      <tr>
        <td><%= row[1] %></td>
        <td><a href="/links/<%= row[0] %>"><%= row[2] %></a></td>
        <td><%= row[3] %></td>
      </tr>
    <% end %>
  <% else %>
    There are no records to show.
  <% end %>
</table>

<p id="add_link"><a href="/links">Add a link</a></p>
