<% if @results.length > 0 %>
  <% @results.map do |row| %>
    <table id="selected">
      <tr><td>ID:</td><td><%= row[0] %></td></tr>
      <tr><td>Name:</td><td><%= row[1] %></td></tr>
      <tr><td>URL:</td><td><%= row[2] %></td></tr>
      <tr><td>Description:</td><td><%= row[3] %></td></tr>
    </table>
  <% end %>
<% else %>
  That is not a valid choice.
<% end %>
